<mvc:View
	controllerName="demo.survey2.SurveyDemo2.controller.Question"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">
	
	<Page title="{QUESTION_TITLE}" id="page" busy="{objectView>/busy}" busyIndicatorDelay="{objectView>/delay}" showNavButton="true"
			navButtonPress=".onNavBack">
        <headerContent
        	class="header">
			<Button
				icon="sap-icon://home"
				press=".onPressHome"/>
		</headerContent>
		<content>
			<Panel
				backgroundDesign="Transparent"
				class="sapUiResponsiveMargin">
				<content>
					<Text
						class="myResults myHeader"
						text="{QUESTION_TITLE}"/>

				</content>
			</Panel>
			
			
			<Panel 
				backgroundDesign="Transparent"
				class="sapUiResponsiveMargin">
				<content>
					<Text
						class="myResults myText"
						text="{QUESTION}"/>
				</content>
			</Panel>

			<Panel
				backgroundDesign="Transparent"
				class="sapUiResponsiveMargin">
				<content> 
					<Text
						class="myResults myHeader"
						text="{SQ_TYPE} Answers:"/>
				</content>
			</Panel>
			
			<List
				id="list"
				width="auto"
				items="{path:'/Answers'}"
				noDataText="{questionView>/tableNoDataText}"
				busyIndicatorDelay="{questionView>/tableBusyDelay}"
				growing="true" 
				updateFinished=".onUpdateFinished">
				<items>
        			<ObjectListItem
        				title="{ANSWER}"
        				number="{ANSWER_CORRECT}"
        				type="Inactive"
        				/>
    			</items>
			</List>
			
			<Panel
				backgroundDesign="Transparent"
				class="sapUiResponsiveMargin">
				<content> 
					<Text
						class="myResults myHeader"
						text="Results:"/>
				</content>
			</Panel>
			
			<List
				id="list1"
				width="auto"
				items="{path:'/UserAnswers'}"
				growing="true" 
				updateFinished=".onFilter">
					<items>
        				<ObjectListItem
        					title="{ANSWER}"
        					type="Inactive"
        					number="{USERID}"
        					/>
    				</items>
				</List>
			
		</content>
	</Page>
</mvc:View>