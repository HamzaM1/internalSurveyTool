<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ActionSheet
		title="Select Answer Type"
		showCancelButton="true"
		placement="Bottom">
			<Button text="Radio" icon="sap-icon://circle-task" press="questionRadio" />
			<Button text="Checkbox" icon="sap-icon://multiselect-all" press="questionCheckbox" />
			<Button text="Slider" icon="sap-icon://resize-horizontal" press="questionSlider" />
			<Button text="Text Input" icon="sap-icon://write-new" press="questionTextbox" />
	</ActionSheet>
</core:FragmentDefinition>