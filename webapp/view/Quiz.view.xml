<mvc:View
	controllerName="demo.survey2.SurveyDemo2.controller.Quiz"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Shell>
		<Page
			title="{SQ_TITLE}"
			id="page"
			busy="{objectView>/busy}"
			busyIndicatorDelay="{objectView>/delay}"
			showNavButton="true"
			navButtonPress=".onNavBack">
			<headerContent
        		class="header">
				<Button
					icon="sap-icon://home"
					press=".onPressHome"/>
			</headerContent>
			<content>
				<Panel
					backgroundDesign="Transparent"
					class="sapUiResponsiveMargin">
					<content>
						<!--Specfiy quiz name -->
						<Text
							class="myResults myHeader"
							text="Placeholder: Non Anonymous Placeholder"/>
					</content>
				</Panel>
				
				<Panel
					backgroundDesign="Transparent"
					class="sapUiResponsiveMargin">
					<content>
						<Text
							class="myResults myHeader"
							text="Question Placeholder:"/>
						<Text
							class="myResults myHeader"
							text="Available Responses:"/>
					</content> 
				</Panel>
				
				<Panel
					backgroundDesign="Transparent"
					class="sapUiResponsiveMargin">
					<content>
						<Text class="myResults myText"
							text="Placeholder"/>
						<RadioButtonGroup editable="true" class="myResults myInput">
							<RadioButton text="Placeholder"/>
							<RadioButton text="Placeholder"/>
							<RadioButton text="Placeholder"/>
						</RadioButtonGroup>
					</content> 
				</Panel>
				
				<Panel
					backgroundDesign="Transparent"
					class="sapUiResponsiveMargin">
					<Button 
						text="Submit"
						press=".onPressSubmit"/>
				</Panel>
			</content> 
		</Page>
	</Shell>
</mvc:View>