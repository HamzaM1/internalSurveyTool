<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic" controllerName="demo.survey2.SurveyDemo2.controller.Worklist">

	<ScrollContainer horizontal="true" vertical="true" width="98%" height="400px" visible="true">
		<content>
			<List id="list" width="auto" items="{path:'/SQ',            sorter:[{path:'SQ_TYPE',descending:false, group:true}]}" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true" updateFinished=".onUpdateFinished">

				<headerToolbar>
					<OverflowToolbar>
						<Title id="listHeader" text="{worklistView>/worklistTableTitle}" level="H3"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search=".onSearch">
							<layoutData>
								<OverflowToolbarLayoutData maxWidth="200px" priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
					</OverflowToolbar>
				</headerToolbar>

				<items>
        		<ObjectListItem title="{SQ_TITLE}" type="Navigation" number="{DATE}" press="onPress" numberUnit="{SQ_OWNER}"/>
    			</items>
    		
			</List>
		</content>
	</ScrollContainer>
	
</mvc:View>