<mvc:View
	controllerName="demo.survey2.SurveyDemo2.controller.New"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">
	
	<Page
		title="New {new>/titleType}"
		showNavButton="true"
		navButtonPress=".onNavBack">
        <headerContent
        	class="header">
			<Button
				icon="sap-icon://home"
				press=".onPressHome"/>
			<Button
				icon="sap-icon://share-2"
				text="Publish"
				press=".onPressPublish"/>
				
		</headerContent>
		
		<content>
			<mvc:XMLView viewName="demo.survey2.SurveyDemo2.view.SurveyTitle"/>
			
			<List
				id="list"
				width="auto"
				items="{path:'/Questions'}"
				growing="true"
				updateFinished=".onUpdateFinished">
					<items>
        				<ObjectListItem
        					title="{QUESTION_TITLE}"
        					type="Navigation"
        					press="onPress"/>
    				</items>
				</List>
			
			<mvc:XMLView viewName="demo.survey2.SurveyDemo2.view.Dropdown"/>
		</content>
	</Page>
</mvc:View>