<mvc:View
	controllerName="demo.survey2.SurveyDemo2.controller.New"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">
	
	<Page
		title="{i18n>newTitle}"
		showNavButton="true"
		navButtonPress=".onNavBack">
        <headerContent
        	class="header">
			<Button
				icon="sap-icon://home"
				press=".onPressHome"/>
			<Button
				icon="sap-icon://share-2"
				text="Publish"
				press=".onPressPublish"/>
		</headerContent>
		<content>
			<mvc:XMLView viewName="demo.survey2.SurveyDemo2.view.SurveyTitle"/>
			<mvc:XMLView viewName="demo.survey2.SurveyDemo2.view.Dropdown"/>
			<mvc:XMLView viewName="demo.survey2.SurveyDemo2.view.SurveyQuestion"/>
		
			<Panel
				backgroundDesign="Transparent"
				class="sapUiResponsiveMargin">
				<content>
					<Button
						text="Add Question"
						icon="sap-icon://add"
					/>
				</content>
			</Panel> 
		</content>
	</Page>
</mvc:View>