<mvc:View
	controllerName="demo.survey2.SurveyDemo2.controller.SurveyTitle"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:mvc="sap.iu.core.mvc">
	<Panel
		class="sapUiResponsiveMargin"
		width="auto" >
		<content>
			<form:SimpleForm
				class= "myForm"
				editable="true"
				title="{i18n>createSTitlePanelTitle}">
				<TextArea
					id="TypeT"
					placeholder="{i18n>placeholderTitle}"
					value="{/InputValue}"
					valueLiveUpdate="true"
					liveChange="handleLiveChange"
					width="50%"
					/>
			</form:SimpleForm>
			<Button
				id="saveTDialogButton"
				icon="sap-icon://save"
				text="{i18n>saveTDialogButtonText}"
				press=".onOpenTDialog"
				class="sapUiResponsiveMargin"/>
			<Button
				text="{i18n>showEnterTButtonText}"
				press=".getTitle"
				class="sapUiSmallMargin"/>
			<FormattedText
				htmlText="{/InputValue}"
				class="sapUiResponsiveMargin sapThemeHighlight-asColor myCustomText"/>
		</content>
	</Panel>
</mvc:View>