<mvc:View
	controllerName="demo.survey2.SurveyDemo2.controller.SurveyTitle"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:mvc="sap.iu.core.mvc">
	<Panel
        backgroundDesign="Transparent"
        class="sapUiResponsiveMargin"
		width="auto">
        <content>
			<Text class="myHeader"
    			text="{new>/titleType} Title"/> 
		</content>
    </Panel>
	
	<Panel
		backgroundDesign="Transparent"
		class="sapUiResponsiveMargin"
		width="auto" >
		<content>
			<form:SimpleForm
				class= "myForm"
				editable="true">
				<TextArea
					id="TypeT"
					placeholder="{i18n>placeholderTitle}"
					value="{/InputValue}"
					valueLiveUpdate="true"
					liveChange="handleLiveChange"
					width="50%"
					/>
			</form:SimpleForm>
		</content>
	</Panel>
</mvc:View>